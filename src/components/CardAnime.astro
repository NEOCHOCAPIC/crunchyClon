---
const {
  imagen,
  titulo,
  descripcion,
  rating,
  votos,
  temporadas,
  episodios,
  doblaje,
} = Astro.props;
---

<div class="relative group w-full md:w-1/5 flex-shrink-0 px-2">
  <div class="browse-card relative h-full">
    <a href="#" class="block relative">
      <div class="aspect-[2/3] overflow-hidden rounded-lg">
        <img
          src={imagen}
          alt={titulo}
          class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
          loading="lazy"
        />
      </div>
    </a>

    <div class="p-3">
      <h4 class="font-semibold text-white text-sm truncate">
        <a href="#" class="hover:text-blue-400">{titulo}</a>
      </h4>
      <div class="mt-1">
        <span class="text-gray-400 text-xs">{doblaje}</span>
      </div>
    </div>

    <!-- Hover card -->
    <div
      class="opacity-0 invisible group-hover:opacity-100 group-hover:visible absolute inset-0 bg-gray-900/95 rounded-lg p-4 transition-all duration-300 z-20"
    >
      <div class="flex flex-col h-full">
        <h4 class="font-semibold text-white text-sm mb-2">{titulo}</h4>

        <div class="flex items-center gap-2 mb-2">
          <div class="flex items-center text-yellow-400">
            <span class="text-sm font-semibold">{rating}</span>
            <svg
              class="w-4 h-4 ml-1"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M15.266 8.352L11.988 1.723 8.73 8.352 1.431 9.397 6.71 14.528 5.465 21.849 11.999 18.39 18.544 21.85 17.285 14.528 22.57 9.398z"
              ></path>
            </svg>
          </div>
          <span class="text-gray-400 text-xs">{votos}</span>
        </div>

        <div class="text-gray-400 text-xs mb-2">
          <span class="mr-2">{temporadas}</span>
          <span>{episodios}</span>
        </div>

        <p class="text-gray-300 text-xs line-clamp-4 mb-4">
          {descripcion}
        </p>

        <div class="mt-auto flex gap-3">
          <button
            class="p-2 rounded-full bg-gray-800 hover:bg-gray-700 transition-colors"
          >
            <svg
              class="w-5 h-5 text-white"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M5.944 3C5.385 3 5 3.445 5 4.22v16.018c0 .771.384 1.22.945 1.22.234 0 .499-.078.779-.243l13.553-7.972c.949-.558.952-1.468 0-2.028L6.724 3.243C6.444 3.078 6.178 3 5.944 3"
              ></path>
            </svg>
          </button>
          <button
            class="p-2 rounded-full bg-gray-800 hover:bg-gray-700 transition-colors"
          >
            <svg
              class="w-5 h-5 text-white"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path d="M13 3v8h8v2h-8v8h-2v-8H3v-2h8V3z"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
