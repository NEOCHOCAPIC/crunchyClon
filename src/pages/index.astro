---
import Animes from "../data/Carrusel.json";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Carrusel from "../components/Carrusel.astro";
import CarruselPequeno from "../components/CarruselPequeno.astro";
import ImageLink from "../components/ImageLink.astro";
import Footer from "../components/Footer.astro";
import Gato from "../components/Gato.astro";
import Noticias from "../components/Noticias.astro";
import Episodios from "../components/Episodios.astro";
import AnimeGrande from "../components/AnimeGrande.astro";
---

<Layout
  titulo="Crunchyroll: Mira animes populares, juega a juegos y compra online"
  descripcion="Embarcate en la aventura del anime con Crunchyroll, el mejor lugar donde podras disfrutar de un enorme catalogo de series y peliculas anime"
>
  <Header />
  <Carrusel />
  <CarruselPequeno Animes={Animes} />
  <ImageLink
    link="https://imgsrv.crunchyroll.com/cdn-cgi/image/fit=contain,format=auto,quality=85,width=2700/CurationAssets/Overlord/Sacred%20Kingdom%20Movie/Catch%20Up/Overlord-SacredKingdom-CatchUp-Banner-2100x700-ES.png"
  />
  <CarruselPequeno Animes={Animes} />
  <CarruselPequeno Animes={Animes} />
  <Episodios />
  <Noticias />
  <ImageLink
    link="https://imgsrv.crunchyroll.com/cdn-cgi/image/fit=contain,format=auto,quality=85,width=2700/CurationAssets/Tying%20the%20Knot%20with%20an%20Amagami%20Sister/SEASON%201/MARKETING%20BANNER/TyingtheKnotwithanAmagamiSister-Banner-2100x700-ES.png"
  />
  <CarruselPequeno Animes={Animes} />
  <AnimeGrande />
  <CarruselPequeno Animes={Animes} />
  <AnimeGrande />
  <Gato />
  <Footer />
</Layout>
